<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>用户列表</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <link rel="stylesheet" href="__LAYUIS__/layui/css/layui.css" media="all">
    <link rel="stylesheet" href="__LAYUIS__/style/admin.css" media="all">
    <script src="__LAYUI__/jquery.min.js"></script>
    <script src="__LAYUI__/base.js"></script>
  </head>
  <body>
   <div class="layui-fluid">
      <div class="layui-row layui-col-space15">
        <div class="layui-col-md12">
          <div class="layui-card">
            <div class="layui-card-header">用户列表
            <div class="layui-btn-group" style="float:right;"> 
              <a class="layui-btn layui-btn-primary layui-btn-sm" href="javascript:Add();">添加用户</a>
              <a class="layui-btn layui-btn-primary layui-btn-sm" href="javascript:location.reload();">刷新</a>
            </div>
            
            </div>
            <div class="layui-card-body" pad15>
            <table class="layui-hide" id="tableShow" lay-filter="tableShow"></table>
            <div id="pages"></div>
                
            </div>
          </div>
        </div>
      </div>
    </div>
    <script type="text/html" id="barDemo">
        <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
        <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
        <a class="layui-btn layui-btn-normal layui-btn-xs" lay-event="api">API地址</a>
    </script>
    </body>
</html>
<script src="__LAYUI__/layui.js"></script>
<link rel="stylesheet" href="__LAYUI__/base.css">
<script>

LoadPage({act:'ajax'});
function LoadPage(queryData){
    layui.use(['table','laypage'], function(){
        var table = layui.table,
            laypage = layui.laypage;
        var tableOption = {
            elem : '#tableShow',
            url : '{:url("getJson")}',
            where: queryData,
            page : false,
            cols : [[
              {field:'id', width:60, title: '编号'},
              {field:'username', title: '账号'},
              {field:'mobile', title: '手机'},
              {field:'expire', title: '过期时间'},
              {title:'操作', align:'center', width:190,toolbar : '#barDemo'}
            ]],
            done : function(res, curr, count){
                if(count > 0){
                    laypage.render({
                        elem: 'pages',
                        layout : ['count', 'prev', 'page', 'next','limit'],
                        count: count,
                        curr : res.page,
                        limit : res.pagesize,
                        jump: function(obj,first){
                            if(!first){
                                var currPage = obj.curr; 
                                queryData['limit'] = obj.limit
                                queryData['page'] = currPage;
                                table.reload('tableShow', {
                                    where : queryData,
                                    page: false
                                }); 
                            }
                        }       
                    });
                }
                else{
                    $("#pages").html('');
                }
            }
        };
        table.render(tableOption);
        
        table.on('tool(tableShow)', function(obj){
            var data = obj.data;
                id = data.id;
            if(obj.event === 'edit'){
                Edit(id); 
            }
            else if(obj.event == 'del'){
                DelParter(id); 
            }
            else if(obj.event == 'api'){
                EditApi(id); 
            }
        });
    });
}

/*删除模块*/
function DelParter(id){
    var index = layer.confirm(
        '确定要删除?',
        {
            btn : ['确定','取消']
        },
        function(){
            $.post(
                "{:url('delUser')}",
                {
                    id : id
                },
                function(data){
                    if(data.code == 0){
                        layer.msg(data.msg,{icon : 1,time : 2000},function(){
                            location.reload();
                        });
                    }
                    else{
                        layer.msg(data.msg,{icon : 2});
                    }
                },
                "json"
            );
        }
    );
}

function EditApi(id){
    layer.open({
        type: 2,
        title: 'API地址',
        shadeClose: true,
        shade: false,
        maxmin: true, 
        area: ['600px', '160px'],
        content: '{:url("copyApi")}?id='+id
    });
}

function Edit(id){
    layer.open({
        type: 2,
        title: '编辑用户',
        shadeClose: true,
        shade: false,
        maxmin: true, 
        area: ['600px', '400px'],
        content: '{:url("edituser")}?id='+id
    });
}

//新增
function Add(){
    layer.open({
        type: 2,
        title: '添加用户',
        shadeClose: true,
        shade: false,
        maxmin: true, 
        area: ['600px', '400px'],
        closeBtn: 1,
        content: '{:url("adduser")}'
    });
}
 
</script>