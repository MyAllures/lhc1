<!DOCTYPE html>
  <html>
  <head>
  <meta charset="utf-8">
  <title></title>
  <meta name="renderer" content="webkit">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <link rel="stylesheet" href="__LAYUIS__/layui/css/layui.css" media="all">
  <link rel="stylesheet" href="__LAYUIS__/style/admin.css" media="all">
  <script src="__LAYUI__/jquery.min.js"></script>
  <script src="__LAYUI__/base.js"></script>
  <script src="__LAYUI__/vue.js"></script>
</head>
<body>
    <div class="layui-fluid">
    <div class="layui-row layui-col-space15">
      <div class="layui-col-md12">
        <div class="layui-card">
          <div class="layui-card-header">修改密码</div>
          <div class="layui-card-body" pad15>


<form class="layui-form" action="{:url('admin/changepass')}" method="post">

  <div class="layui-form-item">
    <label class="layui-form-label">原密码</label>
    <div class="layui-input-block">
      <input type="password" class="layui-input" id="password1" name="password1" placeholder="请输入原密码" lay-verify="required">
    </div>
  </div>

  <div class="layui-form-item">
    <label class="layui-form-label">新密码</label>
    <div class="layui-input-block">
      <input type="password" class="layui-input" id="password2" name="password2" placeholder="请输入新密码" lay-verify="required">
    </div>
  </div>
  
   <div class="layui-form-item">
    <label class="layui-form-label">确认新密码</label>
    <div class="layui-input-block">
      <input type="password" class="layui-input" id="password3" name="password3" placeholder="请输入新密码" lay-verify="required">
    </div>
  </div>

  <div class="layui-form-item">
    <div class="layui-input-block">
      <button type="submit" class="layui-btn" lay-submit="" lay-filter="demo1">确认修改</button>
    </div>
  </div>

</form>
</div></div></div></div></div>
</body>
</html>
<script src="__LAYUI__/layui.js"></script>
<link rel="stylesheet" href="__LAYUI__/base.css">
<script>
//layui
layui.use('form', function(){
  var form = layui.form;
  form.render();
}); 
//提交
$('form').submit(function (event) {
  event.preventDefault();
  var form = $(this);
  //普通表单
  $.ajax({
    type: form.attr('method'),
    url: form.attr('action'),
    data: form.serialize()
  }).success(function (data) {
    if(data=='success'){
      layer.msg('密码修改成功，请重新登录', {
        icon:6,
        time: 1500 //2秒关闭（如果不配置，默认是3秒）
      }, function(){
        window.top.location.href="{:url('login/logout')}";
      })
    }else{
      layer.msg(data, {
        icon:2,
        time: 2000 //2秒关闭（如果不配置，默认是3秒）
      })
    }
  })
});
</script>